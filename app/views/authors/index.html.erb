<h1>All Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th>Details</th>
  </tr>

  <% @author.each do |author| %>
    <tr>
      <td><%= author.name %></td>
      <td><%= author.homepage %></td>
      <td><%= link_to 'Show', author_path(author) %></td>
    </tr>
  <% end %>

  <%= link_to 'Add author', new_author_path %>
</table>
