<h1>All Papers</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Venue</th>
    <th>Year</th>
    <th colspan="2"></th>
  </tr>

  <% @paper.each do |paper| %>
    <tr>
      <td><%= paper.title %></td>
      <td><%= paper.year %></td>
      <td><%= paper.venue %></td>
      <td><%= link_to 'Show', paper_path(paper) %></td>
      <td><%= link_to 'Edit', edit_paper_path(paper) %></td>
      <td><%= link_to 'Destroy', paper_path(paper),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %></td>
      <td></td>
    </tr>
  <% end %>

  <%= link_to 'Add paper', new_paper_path %>
</table>
