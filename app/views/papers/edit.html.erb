<h1>Editing paper</h1>

<%= form_for @paper do |f| %>
<% if @paper.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@paper.errors.count, "error") %> prohibited
      this paper from being saved:
    </h2>
    <ul>
      <% @paper.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<p>
    <%= f.label :title, 'Title' %><br>
    <%= f.text_field :'title' %>
</p>

<p>
    <%= f.label :venue, 'Venue' %><br>
    <%= f.text_field :'venue' %>
</p>

<p>
    <%= f.label :year, 'Year' %><br>
    <%= f.text_field :'year' %>
</p>

<%= f.label "Author 1", for: "paper_author_id_1" %>
<%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[0], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_1"} %>

<%= f.label "Author 2", for: "paper_author_id_2" %>
<%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[1], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_2"} %>

<%= f.label "Author 3", for: "paper_author_id_3" %>
<%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[2], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_3"} %>

<%= f.label "Author 4", for: "paper_author_id_4" %>
<%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[3], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_4"} %>

<%= f.label "Author 5", for: "paper_author_id_5" %>
<%= f.collection_select :author_ids, @authors, :id, :name, {selected: @paper.author_ids[4], include_blank: '(none)'}, {name: "paper[author_ids][]", id: "paper_author_id_5"} %>

<p>
    <%= f.submit %>
</p>
<% end %>

<%= link_to 'Back', papers_path %>
